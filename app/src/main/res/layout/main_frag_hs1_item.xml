<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="72dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:gravity="center"
    android:orientation="vertical">

    <com.miracle.base.view.CircleImageView
        android:id="@+id/main_farg_hs1_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/defaule_img" />

    <TextView
        android:id="@+id/main_farg_hs1_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="东方闪电2222222"
        android:textColor="#000"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参与率"
            android:textColor="#666"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/main_farg_hs1_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78.4%"
            android:textColor="#e66"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>
